@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Student/MasterPage.cshtml";
    @model StudentApp.Models.AddStudentModel
}


<div class="container">
    <div class="row col-md-6 col-md-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1>Add FORM</h1>
            </div>

            @using (Html.BeginForm())
            {
                <h2></h2>
                <form style="width: 450px; margin: auto;">

                    <div class="form-group">
                        <label for="name">Roll No</label>
                        @Html.TextBoxFor(m => m.RollNo)
                        <span style="color:red">@Html.ValidationMessageFor(m => m.RollNo) </span>
                    </div>

                    <div class="form-group">
                        <label for="name">Name</label>
                        @Html.TextBoxFor(m => m.Name)
                        <span style="color:red">@Html.ValidationMessageFor(m => m.Name) </span>
                    </div>

                    <div class="form-group">
                        <label for="name">CGPA</label>
                        @Html.TextBoxFor(m => m.Cgpa)
                        <span style="color:red">@Html.ValidationMessageFor(m => m.Cgpa) </span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
