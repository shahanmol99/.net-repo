@model LoginApp.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index1</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {

            <p>Enter Your Username: </p>
            @Html.TextAreaFor(m => m.UsernName)

